 										sym->vaddr, cls->name, flags, sym->name);
 									R_FREE (flags);
 								}
 								break;
 							}
 							goto done;
 						}
 						goto done;
 					} else if (obj->classes) {
 						playMsg (core, "classes", r_list_length (obj->classes));
 						if (input[1] == 'l' && obj) { // "icl"
 							r_list_foreach (obj->classes, iter, cls) {
 								r_list_foreach (cls->methods, iter2, sym) {
 									const char *comma = iter2->p? " ": "";
